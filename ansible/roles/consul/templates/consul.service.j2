[Unit]
Description=consul agent
Requires=network-online.target
After=network-online.target

[Service]
Restart=on-failure
ExecStart=/usr/local/bin/consul agent {{ consul_extra }} -data-dir /tmp/consul -config-dir /etc/consul.d -node={{ hostname }} -bind={{ ip }} -client=0.0.0.0 >/data/consul/logs/consul.log 2>&1
ExecReload=/bin/kill -HUP $MAINPID
KillSignal=SIGTERM

[Install]
WantedBy=multi-user.target
