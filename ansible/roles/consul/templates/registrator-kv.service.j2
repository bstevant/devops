[Unit]
Description=Registrator-KV container
Requires=consul.service
After=consul.service

[Service]
Restart=always
ExecStart=/usr/bin/docker run --name registrator-kv -v /var/run/docker.sock:/tmp/docker.sock --add-host fognode:{{ ip }} gliderlabs/registrator -ip={{ ip }} consulkv://fognode:8500/services 
ExecStop=/usr/bin/docker stop -t 2 registrator-kv
ExecStopPost=/usr/bin/docker rm -f registrator-kv

[Install]
WantedBy=default.target
