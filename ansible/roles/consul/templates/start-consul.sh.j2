IP6ADDR=`ip -6 addr show dev {{ egress_if }} | grep global | grep -v temporary | cut -d ' ' -f 6 | cut -d '/' -f 1`
/usr/local/bin/consul agent {{ consul_extra }} -data-dir /tmp/consul -config-dir /etc/consul.d \
	-node={{ hostname }} -bind=$IP6ADDR -client=0.0.0.0 >/data/consul/logs/consul.log 2>&1